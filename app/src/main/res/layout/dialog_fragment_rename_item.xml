<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rename_item_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <ca.on.sudbury.hojat.smartgallery.views.MyTextInputLayout
        android:id="@+id/rename_item_title_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title">


        <ca.on.sudbury.hojat.smartgallery.views.MyEditText
            android:id="@+id/rename_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_text_size" />
    </ca.on.sudbury.hojat.smartgallery.views.MyTextInputLayout>

    <ca.on.sudbury.hojat.smartgallery.views.MyTextInputLayout
        android:id="@+id/rename_item_extension_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/extension">

        <ca.on.sudbury.hojat.smartgallery.views.MyEditText
            android:id="@+id/rename_item_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_text_size" />
    </ca.on.sudbury.hojat.smartgallery.views.MyTextInputLayout>

    <include
        android:id="@+id/rename_item_dialog_bottom_row"
        layout="@layout/dialog_bottom_row_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

</LinearLayout>
