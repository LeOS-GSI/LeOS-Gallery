<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contributors_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contributors_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contributors_development_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:text="@string/development"
            android:textSize="@dimen/big_text_size" />

        <RelativeLayout
            android:id="@+id/contributors_development_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:background="@drawable/section_holder_stroke">

            <ImageView
                android:id="@+id/contributors_development_icon"
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                android:layout_alignTop="@+id/contributors_development"
                android:layout_marginStart="@dimen/medium_margin"
                android:contentDescription="@null"
                android:padding="@dimen/medium_margin"
                android:src="@drawable/ic_code_vector" />

            <ca.on.hojat.palette.views.MyTextView
                android:id="@+id/contributors_development"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_toEndOf="@+id/contributors_development_icon"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:paddingBottom="@dimen/normal_margin"
                android:text="@string/contributors_developers"
                android:textSize="@dimen/bigger_text_size"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <TextView
            android:id="@+id/contributors_translation_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:text="@string/translation"
            android:textSize="@dimen/big_text_size" />

        <RelativeLayout
            android:id="@+id/contributors_translation_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:background="@drawable/section_holder_stroke"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/activity_margin">


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
